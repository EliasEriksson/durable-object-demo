{
  "name": "worker-typescript-template",
  "version": "1.0.0",
  "description": "Cloudflare worker TypeScript template",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run build:production",
    "build:production": "(rollup --config rollup.config.js) & (export NODE_ENV='production' && stencil build)",
    "build:preview": "(rollup --config rollup.config.js) & (export NODE_ENV='preview' && stencil build)",
    "build:local": "(rollup --config rollup.dev.config.js) & (export NODE_ENV='local' && stencil build)",
    "build:local:api": "rollup --config rollup.dev.config.js",
    "build:local:ui": "export NODE_ENV='local' && stencil build",
		"start": "npm run start:wrangler",
    "start:wrangler": "(npm run start:wrangler:api) & (npm run start:ui)",
    "start:wrangler:api": "wrangler dev",
    "start:local": "(npm run start:local:api) & (npm run start:ui) && kill $!",
    "start:local:api": "(rollup --config rollup.dev.config.js --watch) & (node --experimental-vm-modules --inspect ./node_modules/miniflare/dist/src/cli.js dist/index.mjs --wrangler-env miniflare --watch --live-reload -B '' && kill $!)",
    "start:ui": "export NODE_ENV='local' && stencil build --dev --serve --watch",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'"
  },
  "author": "author",
  "license": "MIT OR Apache-2.0",
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        { 
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^26.0.23",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "miniflare": "^2.4.0",
    "prettier": "^2.3.0",
    "rollup": "^2.74.1",
    "service-worker-mock": "^2.0.5",
    "ts-jest": "^27.0.1",
    "ts-loader": "^9.2.2",
    "tslib": "^2.4.0",
    "typescript": "^4.3.2"
  }
}
